@model BeautyService.Models.Registration

@{
    ViewData["Title"] = "Информация";
}

<div>
    <h5>Запись прошла успешно!</h5>
    <br/>
    <h4>Вы записаны на услугу: @Model.ServiceType.Title</h4>
    <hr />
    <dl class="row">       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientPhone)
        </dd>
        <dd class="col-sm-10" hidden="hidden">
            @Html.DisplayFor(model => model.ServiceType.Id)
        </dd>
